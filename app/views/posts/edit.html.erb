<h2>Edit an existing post</h2>

<form action='/posts/<%= @post.id %>/edit' method="POST" accept-charset="utf-8" id='edit-post'>
  <label for='title'>Title</label>
  <input type='text' name='title' id='title' value='<%= @post.title %>'/>
  <label for='author'>Author</label>
  <input type='text' name='author' id='author' value='<%= @post.author %>'/>
  <label for='body'>Body</label>
  <input type='text' name='body' id='body' value='<%= @post.body %>'/>
  <input type='submit' name='commit' id='edit_message'  />
</form>
